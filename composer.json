{
  "name": "ajaymahato/laravel-esewa",
  "description": "Laravel eSewa ePay v2 integration (HMAC, callback verify, status check)",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AjayMahato\\Esewa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AjayMahato\\Esewa\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AjayMahato\\Esewa\\EsewaServiceProvider"
      ],
      "aliases": {
        "Esewa": "AjayMahato\\Esewa\\Facades\\Esewa"
      }
    }
  },
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "illuminate/support": "^10.0|^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "laravel/pint": "^1.11"
  },
  "scripts": {
    "test": "pest",
    "format": "pint"
  }
}
